{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es2018",
        "lib": [ "es2018" ],
        "declaration": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "types": [ "node", "jest" ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
